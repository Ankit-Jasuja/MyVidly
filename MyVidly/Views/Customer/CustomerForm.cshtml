@model MyVidly.Models.CustomerFormViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>

@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m=>m.Customer.Name)
        @Html.TextBoxFor(m=>m.Customer.Name, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Customer.BirthDate)  
        @Html.TextBoxFor(m=>m.Customer.BirthDate,"{0:d MMM yyyy}", new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "MemberShipName"), "Select Type", new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter)Subscribed to NewsLetter?
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
